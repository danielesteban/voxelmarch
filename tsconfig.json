{
  "compilerOptions": {
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "esnext",
    "types": ["@webgpu/types"],
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src"]
}
